<h3 class="list-title">Employee List</h3>
<ul class="list">
  <% @employees.each do |employee| %>
  <li class="list-row"><a href="/employee/<%= employee.id %>"><%= employee.list_name %></a></li>
  <% end %>
</ul>
<hr>
<div class="text-right">
  <div class="collapsible-header button-small"><b>+</b> New Employee</div>
  <div class="collapsible-box hidden">
    <%= erb :'employee/_form', locals: { employee: @employee } %>
  </div>
</div>